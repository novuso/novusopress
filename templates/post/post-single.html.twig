                <article id="node-{{ wp.get_the_ID|raw }}" {{ view.postClass|raw }}>
                    <header id="post-header" class="post-header page-header">
                        <h2>{{ wp.get_the_title|raw }}</h2>
                    </header><!-- #post-header -->
                    {{ view.postTimeMeta|raw }}
                {%- if view.hasFeaturedImage %}

                    <div class="featured-image thumbnail">
                        {{ view.featuredImage|raw }}
                    </div><!-- .featured-image -->
                {%- endif %}

                    <div id="post-content" class="post-content entry-content pad-vertical clearfix">
                        {{ view.postContent|raw }}
                    </div><!-- #post-content -->
                    <footer id="post-meta" class="post-meta entry-meta">
                    {%- if wp.current_theme_supports("post-formats", wp.get_post_format) %}

                        {{ view.postFormatMeta|raw }}
                    {%- endif %}

                        {{ view.postAuthorMeta|raw }}
                        {{ view.postClassificationMeta|raw }}
                    </footer><!-- #post-meta -->
                </article><!-- #node-{{ wp.get_the_ID|raw }} -->